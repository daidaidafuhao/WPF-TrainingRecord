<metro:MetroWindow x:Class="TrainingRecordManager.HomePage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   Title="主页" Height="400" Width="600" 
                   ResizeMode="NoResize"
                   Loaded="MetroWindow_Loaded"
                   metro:MetroWindow.GlowBrush="{DynamicResource AccentColorBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="文件录入" Width="150" Margin="10" Click="ImportFileButton_Click"/>
            <Button Content="手动录入" Width="150" Margin="10" Click="ManualInputButton_Click"/>
            <Button Content="查看一览" Width="150" Margin="10" Click="ViewSummaryButton_Click"/>
            <Button Content="导出EXCEL" Width="150" Margin="10" Click="ExportToExcelButton_Click"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>
