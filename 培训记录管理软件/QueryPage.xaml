<metro:MetroWindow x:Class="TrainingRecordManager.QueryPage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   Title="查询培训档案" Height="350" Width="1300" 
                   ResizeMode="NoResize"
                   Loaded="MetroWindow_Loaded"
                   metro:MetroWindow.GlowBrush="{DynamicResource AccentColorBrush}">

    <metro:MetroWindow.Resources>
        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="InputTextBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="StackPanelLeft" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <Style x:Key="QueryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="10,10,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="MetroWindowStyle" TargetType="metro:MetroWindow">
            <Setter Property="FontFamily" Value="微软雅黑"/>
        </Style>
    </metro:MetroWindow.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 第一行查询条件 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource StackPanelLeft}">
            <TextBlock Text="姓名:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchName" Style="{StaticResource InputComboBox}"/>

            <TextBlock Text="身份证号:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchIdCardNumber" Style="{StaticResource InputComboBox}"/>

            <TextBlock Text="职务:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchTitle" Style="{StaticResource InputComboBox}"/>
        </StackPanel>

        <!-- 第二行查询条件 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource StackPanelLeft}">
            <TextBlock Text="级别:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchLevel" Style="{StaticResource InputComboBox}"/>

            <TextBlock Text="单位名称:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchUnitName" Style="{StaticResource InputComboBox}"/>

            <TextBlock Text="学校名称:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchSchoolName" Style="{StaticResource InputComboBox}"/>
        </StackPanel>

        <!-- 第三行查询条件 -->
        <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource StackPanelLeft}">
            <TextBlock Text="入职日期:" Style="{StaticResource InputTextBlock}"/>
            <DatePicker x:Name="RuzhiDateStart" Style="{StaticResource InputDatePicker}"/>
            <TextBlock Text="~" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="RuzhiDateEnd" Style="{StaticResource InputDatePicker}"/>

            <TextBlock Text="专业:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="SearchZhuanYe" Style="{StaticResource InputComboBox}"/>

            <TextBlock Text="工种:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="LevelJobType" Style="{StaticResource InputComboBox}"/>
        </StackPanel>

        <!-- 导入批次和查询按钮 -->
        <StackPanel Grid.Row="3" Grid.Column="0" Style="{StaticResource StackPanelLeft}">
            <TextBlock Text="导入批次:" Style="{StaticResource InputTextBlock}"/>
            <ComboBox x:Name="ImportTime" Style="{StaticResource InputComboBox}"/>
            <Button Content="查询" Style="{StaticResource QueryButtonStyle}" Click="QueryButton_Click"/>
            <Button Content="返回主页" Name="GoToHomePage" Style="{StaticResource QueryButtonStyle}" Click="GoToHomePage_Click" />
        </StackPanel>
    </Grid>

</metro:MetroWindow>
